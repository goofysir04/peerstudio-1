<% submit_url ||=  question_answer_attribute_path %>
<%= form_for [@question,@attribute], :url=>submit_url do |f| %>
  <% if @attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

      <ul>
      <% @attribute.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "When should this be chosen? e.g. Student has not observed a specific enough activity" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
