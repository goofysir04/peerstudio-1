
<div class="row-fluid">

  <div class="span6">
    <h3>Sign in</h3>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

      <div class="control-group">
        <label class="control-label" for="user_email"><%= f.label :email %><br /></label>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="user_password"><%= f.label :password %><br /></label>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %><%= f.label :remember_me, :style=>"display:inline; margin-left:10px;" %></div>
      <% end -%>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Sign in", :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="span6">
    <h2>Or...</h2>

    <%= link_to omniauth_authorize_path(resource,"coursera"), :class=> "btn btn-large btn-primary" do %>
    Log in with <%= image_tag "coursera_white.svg" %> <br/>
  <% end %>
  </div>

</div>

<br />

<%= render "devise/shared/links" %>
