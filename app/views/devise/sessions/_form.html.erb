
<div class="row-fluid">
  <div class="col-md-3 col-md-offset-4">
    
    <div class="login-panel panel panel-default">
      <div class="panel-heading">             
          <h3 class="panel-title">Please Sign In to <strong style="font-family: 'Rock Salt', cursive;">PeerStudio</strong></h3>
      </div>
      <div class="panel-body">
        <div class="row-fluid" id="omniauth-login">
            <%= link_to omniauth_authorize_path(resource,"coursera"), :class=> "btn btn-lg btn-primary btn-block", :id=>"login_button" do %>
              Sign in with <%= image_tag "coursera_white.svg" %> <br/>
              <div id="progress" style="display:none;"><small>(Signing in...)</small></div>
            <% end %>
        </div>

        <div class="row-fluid" id="password-login">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, :autofocus => true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="checkbox">
              <% if devise_mapping.rememberable? -%>
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me %> Remember me
                <% end %>
              <% end -%>
            </div>

            <div class="form-group">
                <%= f.submit "Sign in", :class => 'btn btn-primary' %>
                
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
      <div class="panel-footer">
          <a href="#" id="enable-password-login">I have a password</a>
      </div> 
    </div>
  </div>
</div>


<br />
<script type="text/javascript">
$(function() {
  $("#login_button").click(function(event) {
    $("#progress").show()
    return true;
  });
  
  $('#enable-password-login').click(function() {$('#password-login').show();$('#omniauth-login').hide(); return false});

});
</script>
<%= #render "devise/shared/links" 
%>
