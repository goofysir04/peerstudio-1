<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div style="padding-bottom: 15px;">
	<span style="font-weight:300; font-size:12pt; font-style:italic;">Enter your email below and we will send you instructions to reset your password in a few minutes.</span><br/>
	</div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email" %>
<br/>
  <%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>
  <br/><br/>
<% end %>

<%= render "devise/shared/links" %>
