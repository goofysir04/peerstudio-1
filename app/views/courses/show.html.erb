<style>
  .bright {
    font-size: 1.3em;
    font-style: italic;
  }

  .closed {
    opacity:0.5;
  }
</style>

  <% if @closest_assign.nil? %>
    <h1>No assignments open at this moment.</h1>
  <% else %>
  <h1><%= link_to @closest_assign.title, @closest_assign %>
  <small>  Due on <%= (@closest_assign.due_at).strftime "%b %e, %l:%M %p" %> </h1>
  </small>

<div class="row-fluid header-buttons">
  <div class="row-fluid">
    <div id="assignment_description">
      <%= truncate (sanitize @closest_assign.description), length: 500, escape: false %>
    </div>
  </div>
  <div class="btn-group">
      <%= link_to "Write your answer", new_assignment_answer_path(@closest_assign), class: "btn btn-default" %>
  </div>
  <div class="btn-group">   
      <%= link_to create_typed_review_assignment_path(assignment_id:3,typed_review:{type:"final", revision:"Final Draft"}), class: "btn btn-default", method: :post do %> Give peers feedback <% end %>
  </div>
</div>
  <div class="clearfix"></div>
<% end %>


<div style="padding-left:20px">
<div class="row">
  <h1>Other assignments</h1>
  <table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due on</th>
      <% if user_signed_in? && current_user.admin? %> 
      <th colspan="2"><%= link_to "Add assignment", new_course_assignment_path(@course), class: "btn btn-success"%> </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @course.assignments.order('due_at desc').each do |assignment| %>
      <% if assignment.id != @closest_assign.id %>
        <tr <% if assignment.ended? %> class= "closed" <%end%>>
          <td><%= link_to assignment.title, assignment %></td>
          <td><%= truncate (sanitize assignment.description), length: 200, escape: false %></td>
          <td> <%= (assignment.due_at).strftime "%b %e, %l:%M %p" %></td>
          <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
          <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

</div>
<div class="row">
  <% if user_signed_in? && current_user.admin? %>
  <p class="lead">This course is <strong><%= @course.hidden? ? "hidden from students" : "visible to students"%></strong>, and is currently <strong><%= @course.open_enrollment? ? "open" : "closed" %> </strong> for enrollment. <%= link_to '(Modify)', edit_course_path(@course) %> </p> 
  <% end %>
</div>
</div>