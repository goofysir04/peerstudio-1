<% unless notice.nil? %>
  <div class="alert alert-info"><%= notice %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
<% end %>

<% unless alert.nil? %>
  <div class="alert alert-error"><%= alert %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
<% end %>
