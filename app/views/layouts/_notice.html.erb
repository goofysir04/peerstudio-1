<div class="notice-container">
	<% unless notice.nil? %>
	  <div class="alert alert-info"><%= notice.html_safe %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
	<% end %>

	<% unless alert.nil? %>
	  <div class="alert alert-danger"><%= alert %><button type="button" class="close" data-dismiss="alert">&times;</button></div>
	<% end %>
</div>