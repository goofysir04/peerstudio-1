<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Response</th>
      <th>Question</th>
      <th>User</th>
      <th>Predicted score</th>
      <th>Current score</th>
      <th>Evaluations wanted</th>
      <th>Total evaluations</th>
      <th>Confidence</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.response %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.user_id %></td>
        <td><%= answer.predicted_score %></td>
        <td><%= answer.current_score %></td>
        <td><%= answer.evaluations_wanted %></td>
        <td><%= answer.total_evaluations %></td>
        <td><%= answer.confidence %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
<%= link_to 'Import answers', import_answers_path %>