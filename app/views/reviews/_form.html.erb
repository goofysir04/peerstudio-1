<%= form_for([@answer,@review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% content_for :context_menu do %>
  <p>Here's how this assignment should be assessed</p>
      <style type="text/css">
      .rubric {margin: 0;}
      .rubric li {list-style-type: none; background-color:#efefef; margin:20px 0; padding:10px; -webkit-border-radius:4px; -moz-border-radius:4px; border-radius:4px;}
      </style>
      <ul class="rubric">
        <% if @review.review_type== "paired"%>
          <li>
              <strong>Who is your pair reviewing partner?</strong>
              <%= f.label :copilot_email, "Their email address (if not pair reviewing, leave blank)" %>
              <%= f.email_field :copilot_email, class:"input-block-level", placeholder:"your-partner@ucsd.edu" %>
          </li>
        <% end %>
        <%= f.fields_for :feedback_items do |r| %>
        <% if r.object.rubric_item.open_at < Time.now and r.object.rubric_item.ends_at > Time.now %>
        <li>
          <strong><%= r.object.rubric_item.short_title %></strong> <!-- <span class="pull-right label">Max: <%=r.object.rubric_item.max %> <%= "(#{r.object.rubric_item.max_label})" unless r.object.rubric_item.max_label.blank?%></span> -->
          <legend></legend>
          <%= sanitize r.object.rubric_item.title %>
          <table>
          <%= r.collection_check_boxes(:answer_attribute_ids, AnswerAttribute.where(:rubric_item_id => r.object.rubric_item.id), :id, :description) do |b| %>
            <tr>
            <td style="vertical-align:top;"><%= b.check_box :style => "margin:0 5px 0 0;" %></td><td style="vertical-align:top;"><%= b.label %></td>
            </tr>
          <% end %>
          </table>
          <%= r.text_area :like_feedback, placeholder: "How can I improve on this part?", class:"input-block-level", size: "10x4" %>
          <%= r.hidden_field :rubric_item_id %>
          <% if @review.answer.assignment.due_at < Time.now %>
            <legend></legend>
            <%= r.number_field :score %>
          <% end %>
        </li>
        <% end %>
        <% end %>
        <li>
          <strong>Overall comments</strong> 
          <legend></legend>
          <% if false and @review.review_type == "final"%> 
            Here's <a href="https://www.dropbox.com/s/i2jqp0jg3u7uigj/BanhText.pdf" target="_blank">a good submission from last year</a>. What can the current submission copy from this submission to improve?
          <% end %>
          
          <%= f.text_area :comments, size: "10x5", class:"review_text input-block-level" %>
          <div class="alert" id="review_tips">Review tips appear here as you begin typing.</div>
          <legend></legend>
          <table>
            <tr>
              <td style="vertical-align:top;"><%= f.check_box :out_of_box_answer, :style => "margin:0 5px 0 0;" %></td><td style="vertical-align:top;"><%= f.label :out_of_box_answer, "This is an excellent, out of the box submission." %></td>
            </tr>
          </table>
        </li>
      </ul>
      
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>

