<%= content_for :title do %>
Reviewing <%= answer.assignment.title %>
<% end %>

<%= yield %>
<% content_for :local_nav do %>
    <li><%= link_to answer.assignment.title, answer.assignment %></li>
    <li><button id="startReviewTourBtn" class="btn btn-primary" style="margin-top:7px;">First time reviewing? Take a tour!</button></li>
<% end %>

<div class="row-fluid syncHighlighting">

<% if !answer.assignment.example.blank?%>
  
  <div class="col-md-6">
    <div class="paper">
    	<h3 id="student-work">Give feedback on this submission</h3>
      <%= sanitize Format.markdown answer.response unless answer.response.nil? %>
    </div>
  </div>
  <div class="paper col-md-6">
  	<h3 id="excellent-work">Here's an example of excellent work
  	<small>Compare work to this example to suggest improvements</small></h3>
    <div style="opacity: 0.6;"><%= sanitize Format.markdown answer.assignment.example %></div>
  </div>
<% else %>
  <div class="paper">
    <%= sanitize Format.markdown answer.response unless answer.response.nil? %>
  </div>
<% end %>
</div>
