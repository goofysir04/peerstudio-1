<div class="assignment_instructions">
    <h1><%= link_to answer.assignment.title, answer.assignment %>
    </h1>
    <div class="assignment-description">
      <%= sanitize answer.assignment.description %>
    </div>
</div>

<div class="navbar" id="instructor-actions">
  <div class="navbar-inner">
    <ul class="nav">
      <li><%= link_to "Star answer", star_answer_path(answer), remote: true, class: "star_answer" %></li>
      <li><a href="#">Add to calibration set</a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="assignment-rubric span4">
    Show reviews for <div class="btn-group">
      <button type="button" class="btn dropdown-toggle active-revision" data-toggle="dropdown">
        <%= answer.revision_name %> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% answer.versions.each do |v| %>
        <li><%= link_to v.revision_name, answer_reviews_path(v), remote: true %></li>
        <% end %>
      </ul>
      </div>
    <div class="assignment-rubric-content"%>
        <%= yield %>
    </div>
  </div>

  <div class="field span8">
    <div class="edited-content">
      <%= sanitize answer.response unless answer.response.nil? %>
    </div>
  </div>
</div>
